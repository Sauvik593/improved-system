{
  "name": "@kyero/scaffold",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "NODE_ENV=production npm run build:remix && npm run build:css",
    "build:remix": "NODE_ENV=production remix build",
    "build:css": "npm run generate:css -- --env production --minify",
    "dev": "remix build && concurrently \"npm run dev:css\"  \"npm run dev:node\" \"npm run dev:remix\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:node": "cross-env NODE_ENV=development nodemon --require dotenv/config ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "generate:css": "npx postcss ./styles/app.css -o ./public/build/styles/app.css",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "test": "dotenv -e .env.test vitest run",
    "test:watch": "dotenv -e .env.test vitest watch",
    "lint": "eslint \"./app\"",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@headlessui-float/react": "^0.11.0",
    "@headlessui/react": "^1.7.4",
    "@kyero/icons": "*",
    "@kyero/ui": "*",
    "@remix-run/express": "^1.15.0",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@sentry/remix": "^7.38.0",
    "@xstate/react": "^3.2.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "i18next": "^22.0.5",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-fs-backend": "^2.0.0",
    "i18next-http-backend": "^2.0.1",
    "isbot": "^3.6.5",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-aria": "^3.23.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "react-stately": "^3.21.0",
    "remix-i18next": "^4.1.1",
    "remix-island": "^0.1.2",
    "remix-utils": "^6.0.0",
    "xstate": "^4.36.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@kyero/config": "*",
    "@kyero/tsconfig": "*",
    "@remix-run/dev": "^1.15.0",
    "@remix-run/eslint-config": "^1.15.0",
    "@testing-library/cypress": "^8.0.7",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^2.2.0",
    "classnames": "^2.3.2",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "happy-dom": "^7.7.0",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "start-server-and-test": "^1.15.4",
    "typescript": "^4.8.4",
    "vite": "^3.2.4",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.25.2"
  },
  "engines": {
    "node": ">=14"
  }
}