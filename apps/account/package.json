{
  "name": "@kyero/account",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:remix && npm run build:css",
    "build:css": "npm run generate:css -- --env production --minify",
    "build:remix": "NODE_ENV=production npx remix build",
    "build:remix:prod": "NODE_ENV=production npx remix build --sourcemap",
    "build:prod": "sh ./build-prod.sh",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "NODE_ENV=development remix dev",
    "dev:e2e": "NODE_ENV=development KYERO_API_BASE_URL=http://localhost:3100 npx remix dev",
    "generate:css": "npx postcss ./styles/app.css -o ./public/build/styles/app.css",
    "start": "remix-serve build",
    "test": "vitest run",
    "e2e": "start-server-and-test 'npm run build && npm run start' 3000 'playwright test'",
    "e2e:dev": "start-server-and-test 'npm run dev:e2e' 3000 'playwright-watch test'",
    "e2e:dev:debug": "start-server-and-test 'npm run dev:e2e' 3000 'playwright test --debug'",
    "lint": "eslint \"./app\"",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc"
  },
  "prettier": "../../.prettierrc.json",
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@kyero/ui": "*",
    "@radix-ui/react-switch": "^1.0.1",
    "@radix-ui/react-tooltip": "^1.0.2",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@remix-validated-form/with-zod": "^2.0.5",
    "@sentry/remix": "^7.38.0",
    "eslint-config-kyero": "*",
    "i18next": "^22.0.5",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-fs-backend": "^2.0.0",
    "i18next-http-backend": "^2.0.1",
    "isbot": "^3.6.5",
    "query-string": "^7.1.1",
    "ramda": "^0.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "remix-i18next": "^4.1.1",
    "remix-island": "^0.1.2",
    "remix-utils": "^6.0.0",
    "remix-validated-form": "^4.6.7",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@kyero/config": "*",
    "@kyero/tsconfig": "*",
    "@playwright/test": "^1.35.1",
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@testing-library/cypress": "^8.0.7",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/ramda": "^0.28.20",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^2.2.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.27.0",
    "happy-dom": "^7.7.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "start-server-and-test": "^1.15.4",
    "typescript": "^4.8.4",
    "vite": "^3.2.4",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.25.2"
  },
  "engines": {
    "node": ">=16"
  }
}